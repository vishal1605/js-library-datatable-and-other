@{
    Layout = "_Layout";
    ViewData["Title"] = "QrCode-Generator";
}

<div class="row loader" style="display:none" id="loader">
    <div class="col-12 d-flex justify-content-center">
        <div class="spinner-border loading-status" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<div class="row qr-code">
    <div class="col-6 m-auto border border-1 p-3 shadow">
        <form id="form-submit">
            <input id="data-string" type="text" placeholder="Your Link here" required class="form-control" /><br />
            <button class="btn btn-primary">Generate Qr</button>
        </form>
    </div>
</div>
<div class="row image mt-3">
    <div class="col-8 m-auto">
        <img src="" id="my-qr" width="300px" style="border:1px solid red" />

    </div>
    <div class="col-8 m-auto" id="btn-div" style="display:none">
        <a id="download-link" download="" href="">Download</a>
    </div>
</div>
<script src="/js/qr-generator.js"></script>